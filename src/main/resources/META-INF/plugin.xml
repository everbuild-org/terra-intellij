<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.dfsek.terra.codetool</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Terra CodeTool</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/PolyhedralDev/">Polyhedral Development</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
   This plugin adds support for the <code>.tesf</code> file format, designed for Terra, a data-driven World Generator for Minecraft.

    <h3>Key Features:</h3>
    <ul>
        <li><b>Syntax Highlighting and Formatting</b>: Offers full syntax highlighting for <code>.tesf</code> files, making it easier to read and write Terra scripts. It also includes a code formatter to maintain a consistent style across your projects.</li>
        <li><b>Code Completion and Analysis</b>: Provides intelligent code completion to help you write scripts faster and with fewer errors.</li>
        <li><b>Structure View</b>: Includes a structure view for <code>.tesf</code> files</li>
        <li><b>Refactoring and Navigation</b>: Supports refactoring of variables. You can also navigate between symbol declarations and their usages.</li>
        <li><b>Documentation and Templates</b>: Offers built-in support for documentation and parameter info, helping you understand the available functions and their usage. It also comes with live templates to speed up common coding tasks.</li>
    </ul>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.plugins.yaml</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType name="terrascript" implementationClass="com.dfsek.terra.codetool.TerrascriptFileType" fieldName="INSTANCE" language="terrascript" extensions="tesf"/>
        <lang.parserDefinition language="terrascript" implementationClass="com.dfsek.terra.codetool.parsing.TerrascriptParserDefinition"/>
        <lang.syntaxHighlighterFactory language="terrascript" implementationClass="com.dfsek.terra.codetool.syntax.TerrascriptSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.dfsek.terra.codetool.syntax.TerrascriptColorSettingsPage" id="terrascript" order="last"/>
        <lang.formatter language="terrascript" implementationClass="com.dfsek.terra.codetool.formatting.TerrascriptFormattingModelBuilder"/>
        <completion.contributor language="terrascript" implementationClass="com.dfsek.terra.codetool.completion.TerrascriptCompletionContributor"/>
        <psi.referenceContributor language="terrascript" implementation="com.dfsek.terra.codetool.reference.TerrascriptReferenceContributor"/>
        <lang.psiStructureViewFactory language="terrascript" implementationClass="com.dfsek.terra.codetool.structure.TerrascriptStructureViewFactory"/>
        <lang.refactoringSupport language="terrascript" implementationClass="com.dfsek.terra.codetool.reference.TerrascriptRefactoringSupportProvider"/>
        <platform.backend.documentation.targetProvider implementation="com.dfsek.terra.codetool.docs.TerrascriptDocumentationTargetProvider"/>
        <codeInsight.parameterInfo language="terrascript" implementationClass="com.dfsek.terra.codetool.docs.TerrascriptParameterInfoHandler"/>
        <annotator language="terrascript" implementationClass="com.dfsek.terra.codetool.annotator.TerrascriptUndefinedVariableAnnotator"/>
        <annotator language="terrascript" implementationClass="com.dfsek.terra.codetool.annotator.TerrascriptUnusedVariableAnnotator"/>
        <liveTemplateContext implementation="com.dfsek.terra.codetool.template.TerrascriptLiveTemplateContext" contextId="terrascript"/>
        <defaultLiveTemplates file="/liveTemplates/terrascript.xml"/>
        <lang.braceMatcher language="terrascript" implementationClass="com.dfsek.terra.codetool.editor.TerrascriptBraceMatcher"/>
        <typedHandler implementation="com.dfsek.terra.codetool.editor.TerrascriptTypedHandler"/>
        <languageInjector implementation="com.dfsek.terra.codetool.inject.TerrascriptStringInjector"/>

        <fileType name="terrascript_blockstate" implementationClass="com.dfsek.terra.codetool.stringcomp.StringcompFileType" fieldName="INSTANCE" language="terrascript_blockstate" extensions="minecraft_blockstate"/>
        <lang.parserDefinition language="terrascript_blockstate" implementationClass="com.dfsek.terra.codetool.stringcomp.StringcompParserDefinition"/>
        <completion.contributor language="terrascript_blockstate" implementationClass="com.dfsek.terra.codetool.stringcomp.completion.StringcompCompletionContributor"/>

        <iconProvider implementation="com.dfsek.terra.codetool.icon.YamlIconProvider"/>

        <statusBarWidgetFactory implementation="com.dfsek.terra.codetool.project.ProjectStatusBarWidgetFactory" id="terra_project"/>
        <fileBasedIndex implementation="com.dfsek.terra.codetool.project.ProjectRootIndexExtension" />
        <fileBasedIndex implementation="com.dfsek.terra.codetool.project.NameIndexExtension" />
        <fileBasedIndex implementation="com.dfsek.terra.codetool.project.FileTypeIndexExtension" />
    </extensions>
    <actions>
        <action id="NEW_TERRASCRIPT_FILE"
                class="com.dfsek.terra.codetool.action.CreateNewTesfFile"
                text="Terrascript"
                description="Create new Terrascript file"
                icon="com.dfsek.terra.codetool.TerraIcons.TesfFile">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
    </actions>
</idea-plugin>
